@model IEnumerable<Package>
@{
    ViewData["Title"] = "List";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<h1>List</h1>
@if (Model.Count() == 0)
{
    <div class="alert alert-danger" role="alert">
        Kayıt Bulunamadı..!
    </div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Paket Adı</th>
                <th scope="col">Paket İçeriği</th>
                <th scope="col">###</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.ID</th>
                    <td>@item.PackageName</td>
                    <td>@item.Contents</td>
                    <td><a asp-area="User" asp-controller="Customer" asp-action="PackageVote" asp-route-id="@item.ID" class="btn btn-warning">Paket Seç</a></td>
                </tr>
            }
        </tbody>
    </table>
}
