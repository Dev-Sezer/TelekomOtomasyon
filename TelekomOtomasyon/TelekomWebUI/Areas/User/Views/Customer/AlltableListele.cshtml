@model IEnumerable<AllTable>
@{
    ViewData["Title"] = "AlltableListele";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<h1>AlltableListele</h1>

@if (Model.Count() == 0)
{
    <div class="alert alert-danger" role="alert">
        Kayıt Bulunamadı..!
    </div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Müşteri ID</th>
                <th scope="col">Müşteri Adı</th>
                <th scope="col">Müşteri Soyadı</th>
                <th scope="col">Paket ID</th>
                <th scope="col">###</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.ID</th>
                    <td>@item.CustomerID</td>
                    <td>@item.CustomerName</td>
                    <td>@item.CustomerSurname</td>
                    <td>@item.PackageID</td>
                    <td><a asp-area="User" asp-controller="Customer" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-warning">Paket Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
}