@model IEnumerable<Customer>
@{
    ViewData["Title"] = "Listele";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div><a asp-controller="Customer" asp-action="AddCustomer" class="btn btn-success">Müşteri Ekle</a></div>

<h1>Müşteri Kayıt Listesi</h1>
@if (Model.Count() == 0)
{
    <div class="alert alert-danger" role="alert">
        Kayıt Bulunamadı..!
    </div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Müşteri Adı</th>
                <th scope="col">Müşteri Soyadı</th>
                <th scope="col">###</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.ID</th>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td><a asp-controller="Customer" asp-action="Guncelle" asp-route-id="@item.ID" class="btn btn-warning">Güncelle</a></td>
                    <td><a asp-controller="Customer" asp-action="Sil" asp-route-id="@item.ID" class="btn btn-danger">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
}

